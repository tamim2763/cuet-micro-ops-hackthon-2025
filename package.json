{
  "name": "delineate-hackathon-challenge-cuet-fest-25-nodejs",
  "type": "module",
  "engines": {
    "node": ">=24.10.0"
  },
  "scripts": {
    "dev": "DOWNLOAD_DELAY_MIN_MS=5000 DOWNLOAD_DELAY_MAX_MS=15000 node --env-file=.env --experimental-transform-types --watch src/index.ts",
    "start": "DOWNLOAD_DELAY_MIN_MS=10000 DOWNLOAD_DELAY_MAX_MS=120000 node --env-file=.env --experimental-transform-types src/index.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:e2e": "node --experimental-transform-types scripts/run-e2e.ts",
    "docker:dev": "docker compose -f docker/compose.dev.yml up --build",
    "docker:prod": "docker compose -f docker/compose.prod.yml up --build -d",
    "security:audit": "npm audit --audit-level=moderate",
    "security:audit:fix": "npm audit fix",
    "security:audit:prod": "npm audit --omit=dev --audit-level=high",
    "security:check": "npm run security:audit && echo 'Security check passed'",
    "security:fix": "npm audit fix && npm run lint:fix && npm run format",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.948.0",
    "@hono/node-server": "^1.19.6",
    "@hono/otel": "^1.0.1",
    "@hono/sentry": "^1.2.2",
    "@hono/zod-openapi": "^1.1.5",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@scalar/hono-api-reference": "^0.9.28",
    "hono": "^4.10.8",
    "hono-rate-limiter": "^0.4.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@hono/eslint-config": "^2.0.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.10.2",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "version": "1.0.0"
}
